<section id="products">
  <h2>Produtos</h2>
  
  <% if @product_models.any? %>
  
    <% @product_models.each do |pm| %>
      <div>
        <h2><%= pm.name %></h2>
        <dl>
          <dt>SKU: </dt>
          <dd><%= pm.sku %></dd>
          <dt>Fornecedor: </dt>
          <dd><%= pm.supplier.brand_name %></dd>
        </dl>
      </div>
    <% end %>

  <% else %>
    <p>Nenhum modelo de produto cadastrado</p>
  <% end %>
  
</section>

<%= link_to 'Cadastrar produto', new_product_model_path %>