
<section id="suppliers">
  <h2>Fornecedores</h2>

  <div>
    <%= link_to 'Cadastrar novo fornecedor', new_supplier_path %>
  </div>

  <div id="suppliers_table">

    <% if(@suppliers.any?) %>

      <table>
        <thead>
          <tr>
            <th>Nome</th>
            <th>Localização</th>
          </tr>
        </thead>
        <tbody>
          <% @suppliers.each do |s| %>
            <tr>
              <th><%= link_to s.brand_name, s %></th>
              <th><%= "#{s.city} - #{s.state}" %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    <% else %>
      <p>Não existem fornecedores cadastrados</p>
    <% end %>

  </div>
</section>

<%= link_to 'Voltar', root_path %>